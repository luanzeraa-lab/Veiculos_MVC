<!DOCTYPE html>
<html>
<head>
  <title>Lista de Veículos</title>
</head>
<body>
  <h1>Lista de Veículos</h1>
  <a href="/veiculos/adicionar">Cadastrar novo veículo</a>
  <ul>
    <% veiculos.forEach(veiculo => { %>
      <li>
        <%= veiculo.id %> - <%= veiculo.nome %>
        <form action="/veiculos/editar/<%= veiculo.id %>" method="POST" style="display:inline;">
          <input type="text" name="nome" placeholder="Novo nome">
          <button type="submit">Editar</button>
        </form>
        <form action="/veiculos/excluir/<%= veiculo.id %>" method="POST" style="display:inline;">
          <button type="submit">Excluir</button>
        </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>